{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "moduleResolution": "node",
    "target": "es2016",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "strict": true,
    "incremental": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/lib",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
